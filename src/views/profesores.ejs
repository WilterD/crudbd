<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Tabla de profesores</title>
    <%- include('partials/head.ejs') %>

    <!-- Estilos de Bootstrap -->
    
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <a href="/crear" class="btn btn-outline-primary fs-2 btn-block"> Agregar <i
                        class='bx bxs-plus-circle'></i></a>
            </div>

            <h1>Tabla de profesores</h1>
            <table id="miTabla" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th>Categoría</th>
                        <th>Dedicación</th>
                        <th>Fecha de ingreso</th>
                        <th>Fecha de egreso</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                <% results.forEach(profesor => { %>
                    <td><%= profesor.cedulap %></td>
                    <td><%= profesor.nombrep %></td>
                    <td><%= profesor.direccionp %></td>
                    <td>tlf</td>
                    <td>catg</td>
                    <td>dedicacion</td>
                    <td>fecha ing</td>
                    <td>fecha egr</td>
                    <td>status</td>
                    <td>
                        <a href="/editar/cedulaProf" class="btn btn-outline-info"><i class='bx bxs-pencil fs-5'></i></a>
                        <a onclick="confirmar('id','/borrarProfe')" class="btn btn-outline-danger">
                            <i class='bx bxs-trash'></i></a>
                    </td>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Scripts de Bootstrap y jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <!-- Script personalizado para inicializar DataTables -->
    
    <%- include('partials/scripts.ejs') %>

</body>
</html>